<div class="container">
	<div class="row justify-content-center">
		<div class="col-10">
				<%= @campsite.name %><br>
				<%= @campsite.explanation %><br>
				<% @campsite.genres.each do |genre| %>
					<%= genre.name %>
				<% end %>
				<% @campsite.campsite_images.each do |image| %>
					<%= attachment_image_tag(image, :image, :fill, 300, 300, format: "jpeg", fallback: "no_image.jpeg", size: "100x100") %>
				<% end %>
				<% if @campsite.approval_status == "未承認" %>
					<%= link_to "承認", publisher_campsite_approval_path(@campsite), method: :patch, class:"btn btn-success" %>
				<% elsif @campsite.approval_status == "承認" %>
					<%= link_to "承認取り消し", publisher_campsite_approval_revoked_path(@campsite), method: :patch, class:"btn btn-success" %>
				<% end %>
				<%= link_to "削除", admin_campsite_path(@campsite), method: :delete, class:"btn btn-danger" %>
			</div>
		</div>
	</div>
</div>