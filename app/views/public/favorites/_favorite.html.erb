<% if campsite.favorited_by?(current_user) %>
	<%= link_to public_campsite_favorite_path(campsite, current_user), method: :delete, remote: true do %>
		<i class="fas fa-heart"></i>
	<% end %>
<% else %>
	<%= link_to public_campsite_favorites_path(campsite), method: :post, remote: true do %>
		<i class="far fa-heart", id="like-off"></i>
	<% end %>
<% end %>