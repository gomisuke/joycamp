<div class="container">
	<div class="row justify-content-center">
		<div class="col-8 mt-3">
			<div class="card">
				<%= attachment_image_tag(@campsite.campsite_images[0], :image, :fill, 300, 200, format: "jpeg", fallback: "no-image-camera.png", size: "100x100", class:"img-fluid card-img-top") %>
				<div class="card-body">
					<%= @campsite.name %><br>
					<%= @campsite.explanation %><br>
					<%= @campsite.postcode %><br>
					<%= @campsite.prefecture.name %>
					<%= @campsite.address_city %>
					<%= @campsite.address_street %>
					<% if @campsite.favorited_by?(current_user) %>
						<%= link_to public_campsite_favorite_path(@campsite, current_user), method: :delete do %>
							<i class="fas fa-heart"></i>
							いいねを外す
						<% end %>
					<% else %>
						<%= link_to public_campsite_favorites_path(@campsite), method: :post do %>
							<i class="far fa-heart", id="like-off"></i>
							いいね
						<% end %>
					<% end %>
					<% @campsite_comments.each do |comment| %>
						<%= comment.comment %>
					<% end %>
					<%= form_with model: [:public, @campsite, @campsite_comment] do |f| %>
						<%= f.label :comment %>
						<%= f.text_field :comment, class:"form-control" %>
						<%= f.submit "コメントする", class:"btn btn-success" %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>