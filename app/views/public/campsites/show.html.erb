<div class="container">
	<div class="row justify-content-center">
		<div class="col-8">
			<div class="card">
				<%#= link_to post_path(post.id) do %>
					<%#= attachment_image_tag(post, :post_image, :fill, 300, 300, format: "jpeg", fallback: "no_image.jpeg", size: "100x100", class:"img-fluid card-img-top") %>
				<%# end %>
				<div class="card-body">
					<%= @campsite.name %><br>
					<%= @campsite.explanation %><br>
					<%= @campsite.postcode %><br>
					<%= @campsite.prefecture_code %>
					<%= @campsite.address_city %>
					<%= @campsite.address_street %>
					<% if @campsite.favorited_by?(current_user) %>
						<%= link_to public_campsite_favorite_path(@campsite, current_user), method: :delete do %>
							<!-- <i class="fas fa-heart"></i> -->
							いいねを外す
						<% end %>
					<% else %>
						<%= link_to public_campsite_favorites_path(@campsite), method: :post do %>
							<!-- <i class="far fa-heart", id="like-off"></i> -->
							いいね
						<% end %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>