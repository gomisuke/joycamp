<div class="cantainer">
	<div class="row">
		<div class="col-11 offset-1">
			<h3>キャンプ場一覧</h3>
		</div>
	</div>
	<div class="row">
		<div class="col-3 border">

		</div>
		<div class="col-9">
			<div class="row">
				<% @campsites.each do |campsite| %>
				<div class="col-4">
					<div class="card">
						<%= link_to public_campsite_path(campsite.id) do %>
							<%= attachment_image_tag(campsite.campsite_images[0], :image, :fill, 300, 300, format: "jpeg", fallback: "no-image-camera.png", size: "100x100", class:"img-fluid card-img-top") %>
						<% end %>
						<div class="card-body">
							<%= link_to campsite.name, public_campsite_path(campsite) %>
							<%= campsite.explanation %>
						</div>
					</div>
				</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
